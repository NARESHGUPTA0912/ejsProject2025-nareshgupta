<%- include('./base/header.ejs') %>
  <!-- <%- include('./base/nav.ejs') %> -->

  <nav class="navbar navbar-expand-lg bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">RDEC</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/student/add/page">Add student</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/student/list/page">List Student</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="container">
      <div class="alert text-center bg-primary my-3" style=" color: white;">
        <h4>Student List</h4>
      </div>
    </div>

    <div class="container">
      <table class="table text-center">
        <thead>
          <tr>
            <th>Image</th>
            <th>Roll No</th>
            <th>Name</th>
            <th>Father`s Name</th>
            <th>Course</th>
            <th>Branch</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach((student)=> { %>
            <tr>
            <td><img src="<%= student.studentImage %>" alt="Student Image" width="60" height="40"></td>
              <td>
                <%= student.rollNo %>
              </td>
              <td>
                <%= student.studentName %>
              </td>
              <td>
                <%= student.fatherName %>
              </td>
              <td>
                <%= student.course %>
              </td>
              <td>
                <%= student.branch %>
              </td>
              <td>
                <a href="/edit/student/page/<%= student._id %>" class="btn btn-primary btn-sm">Edit<i class="bi bi-pencil-square"></i></a>
                <a href="/delete/student/<%= student._id %>" class="btn btn-danger btn-sm">Delete<i class="bi bi-trash"></i></a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include('./base/footer.ejs') %>