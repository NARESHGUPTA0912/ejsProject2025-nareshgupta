<%- include('./base/header.ejs') %>
    <%- include('./base/nav.ejs') %>

        <div class="container">
            <div class="container">
                <div class="alert text-center bg-primary my-3" style=" color: white;">
                    <h4>Student List</h4>
                </div>
            </div>

            <div class="container">
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Roll No</th>
                            <th>Name</th>
                            <th>Father`s Name</th>
                            <th>Mother`s Name</th>
                            <th>Course</th>
                            <th>Branch</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach((student)=> { %>
                            <tr>
                               <td><img src="<%= student.studentImage %>" alt="Student Image" width="60" height="40"></td>
                                <td>
                                    <%= student.rollNo %>
                                </td>
                                <td>
                                    <%= student.studentName %>
                                </td>
                                <td>
                                    <%= student.fatherName %>
                                </td>
                                <td>
                                    <%= student.motherName %>
                                </td>
                                <td>
                                    <%= student.course %>
                                </td>
                                <td>
                                    <%= student.branch %>
                                </td>
                                <td>
                                    <a href="/edit/student/page/<%= student._id %>" class="btn btn-primary btn-sm">Edit<i class="bi bi-pencil-square"></i></a>
                                    <a href="/delete/student/<%= student._id %>" class="btn btn-danger btn-sm">Delete<i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

<%- include('./base/footer.ejs') %>